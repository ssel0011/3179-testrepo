{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Number of Covid Variants around the world",
    "width": 800,
    "height": 600,
    "projection": {"type": "equirectangular"},
    "data": {
    "url": "default/world.topojson.json",
    "format": {"type": "topojson", "feature": "world.geo (1)"}
    },
    "transform": [
    {
    "lookup": "properties.name",
    "from": {
    "data": {
    "url": "default/drinks.csv"
    },
    "key": "country",
    "fields": ["total_litres_of_pure_alcohol"]
    }
    },
    {"calculate": "datum.total_litres_of_pure_alcohol + 1", "as": "Total Litres of pure alcohol"}
    ],
    "mark": {"type": "geoshape"},
    "encoding": {
    "color": {  
    "field": "Total Litres of pure alcohol",
    "type": "quantitative",
    "scale": {"type": "log", 
    "range": ["#fcc2fa", "#f748ef", "#b708af", "#3d033a"]}
    },
    "tooltip": [
    {"field": "properties.name", "type": "nominal", "title": "country"},
    {"field": "total_litres_of_pure_alcohol", "type": "quantitative"}
    ]
    }
   }